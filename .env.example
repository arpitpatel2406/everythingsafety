# Example environment file for production
SECRET_KEY=generate-a-new-secret-key-for-production
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Database configuration (PostgreSQL)
DATABASE_NAME=everythingsafety_prod_db
DATABASE_USER=prod_db_user
DATABASE_PASSWORD=secure_db_password
DATABASE_HOST=your-postgres-host
DATABASE_PORT=5432

# Redis configuration
REDIS_URL=redis://your-redis-host:6379/0

# Email configuration
EMAIL_HOST=smtp.your-email-provider.com
EMAIL_PORT=587
EMAIL_HOST_USER=noreply@yourdomain.com
EMAIL_HOST_PASSWORD=your-email-password
EMAIL_USE_TLS=True

# Sentry (Error tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# AWS S3 (for media files)
# AWS_ACCESS_KEY_ID=your-production-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-production-aws-secret-key
# AWS_STORAGE_BUCKET_NAME=your-production-bucket
# AWS_S3_REGION_NAME=us-east-1
